{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "watch": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "baseUrl": "src/app",
    "outDir": "lib",

    "paths": {
      "root/*": ["../../*"],
      "app/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}